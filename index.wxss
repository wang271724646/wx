/**上面的样式**/
.box{
  width:100vw;height:100vh;
}
.view{
  width:100%;height:30%;
  box-sizing: border-box;
}

.nums{
  width:100%;height:50%;
  text-align: right;
  line-height: 60px;
  padding-right: 10px;
  box-sizing: border-box;
  font-size: 24px;
}
.result{
  width:100%;height:50%;
  text-align: right;
  line-height: 60px;
  padding-right: 10px;
  box-sizing: border-box;
  font-size: 24px;
  font-weight: bold;
}

/**下面的样式**/
.keys{
  width:100%;height:70%;
  display: flex;
  flex-wrap: wrap;
}
.key{
  width:25%;height:25%;
  border-top:1px solid #ccc;
  border-right:1px solid #ccc;
  box-sizing: border-box;
  text-align: center;
  line-height: 17.5vh;
  font-size: 20px;
}
.tool{
  background: #ddd;
}
.key:active{
  background: #eee;
}